{
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "esnext",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "jsx": "react-jsx",
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": ["node","vitest", "@testing-library/jest-dom", "@emotion/react", "vitest/globals"],
    "typeRoots": ["./node_modules/@types", "./types", "./node_modules"],
    "sourceMap": true,
    "esModuleInterop": true,
    "noEmit": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true

  },
  "include": [
    "src",
    ".storybook",
    "vite-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.d.ts",
  ]
}
